@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blazor Bootstrap Layout</title>
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" /> <!-- Ensure this path is correct -->
    <link rel="stylesheet" href="MyBlazorApp.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <HeadOutlet />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header>
        <!-- Main header with gradient -->
        <div class="header-main">
            <div class="container">
                <h1>Header</h1>
            </div>
        </div>
        <!-- Login row -->
        <div class="login-row">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-end">
                        <span>Logged in as: @CurrentUser</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content (Grows to fill space) -->
    <main class="main-content container-fluid my-4 flex-grow-1">
        <!-- Top Section (Full Width) -->
        <div class="row">
            <div class="col-12">
                <div class="top-section p-3">
                    <h5>Top Section</h5>
                    <p>This is the thin section across the top</p>
                </div>
            </div>
        </div>

        <!-- Bottom Sections (1/3 and 2/3 split) -->
        <div class="row mt-3 flex-grow-1">
            <!-- Left Section (1/3 width) -->
            <div class="col-md-4">
                <div class="left-section p-3 h-100">
                    <h5>Left Section</h5>
                    <p>This section takes up 1/3 of the width</p>
                </div>
            </div>
            <!-- Right Section (2/3 width) -->
            <div class="col-md-8">
                <div class="right-section p-3 h-100">
                    <h5>Right Section</h5>
                    <p>This section takes up 2/3 of the width</p>
                    @Body <!-- Blazor content goes here -->
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="custom-footer py-3">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-md-6 col-12 d-flex flex-column align-items-md-start align-items-center text-md-start text-center">
                    <small class="fw-bold">Company Name</small>
                    <div class="d-flex align-items-center mt-2">
                        <i class="fa fa-map-pin text-orange fs-5 me-2"></i>
                        <small>123 Main Street, City, State, ZIP</small>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                        <i class="fa fa-phone text-orange fs-5 me-2"></i>
                        <small>+1 (234) 567-890</small>
                    </div>
                </div>
                <div class="col-md-6 col-12 d-flex justify-content-md-end justify-content-center text-md-end text-center mt-3 mt-md-0">
                    <span class="copyright-text">© Copyright</span>
                    <a href="https://parentcompany.com" class="footer-links mx-2">Parent Company</a> |
                    <a href="/security" class="footer-links mx-2">Security Statement</a> |
                    <a href="/privacy" class="footer-links mx-2">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="_framework/blazor.web.js"></script>
</body>
</html>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    string CurrentUser { get; set; } = "Guest";

    protected override async Task OnInitializedAsync()
    {
        // Simulate a user login
        await Task.Delay(1000);
        CurrentUser = "John Doe";
    }
}