@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blazor Bootstrap Layout</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .top-section {
            min-height: 100px; /* Thinner top section */
            background-color: #f8f9fa;
        }
        .left-section {
            min-height: 300px; /* Taller for visibility */
            background-color: #6c757d;
            color: white;
        }
        .right-section {
            min-height: 300px; /* Matching height */
            background-color: #17a2b8;
            color: white;
        }
        /* Ensure full height for main content */
        html, body {
            height: 100%;
        }
        .main-content {
            flex: 1 0 auto;
        }

        html, body {
            height: 100%;
            font-family: Sans-Serif;
            font-size: 12px;
            line-height: 2.0em;
        }

        .content {
            flex: 1;
        }

        .custom-header {
            background-color: #0f2f54;
            height: 140px;
        }

        .logo {
            width: 175px;
            height: 120px;
            object-fit: contain;
        }

        .header-title {
            color: white;
            font-size: 24px;
            font-weight: bold;
        }

        .custom-footer {
            background-color: #e3effc;
            color: rgb(149,149,149);
            height: 120px;
            font-size: 12px;
            line-height: 2.0em;
        }

        .text-orange {
            color: orange !important;
        }

        .footer-links {
            color: #0f2f54 !important;
            text-decoration: none;
            font-size: 12px;
        }

            .footer-links:hover {
                text-decoration: underline;
            }

        .copyright-text {
            color: rgb(149,149,149);
            font-size: 12px;
            margin-right: 5px;
        }
    </style>
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="MyBlazorApp.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />    <!-- Add Font Awesome for the icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <HeadOutlet />
</head>
<body class="d-flex flex-column">
    <!-- Header -->
    <header class="custom-header d-flex align-items-center px-3">
        <div class="container d-flex justify-content-between align-items-center">
            <img src="logo.svg" alt="Company Logo" class="logo">
            <h1 class="header-title m-0">Website Title</h1>
        </div>
    </header>
    <!-- Main Content -->
    <main class="main-content container-fluid my-4">
        <!-- Top Section (Full Width) -->
        <div class="row">
            <div class="col-12">
                <div class="top-section p-3">
                    <h5>Top Section</h5>
                    <p>This is the thin section across the top</p>
                </div>
            </div>
        </div>

        <!-- Bottom Sections (1/3 and 2/3 split) -->
        <div class="row mt-3">
            <!-- Left Section (1/3 width) -->
            <div class="col-md-4">
                <div class="left-section p-3">
                    <h5>Left Section</h5>
                    <p>This section takes up 1/3 of the width</p>
                </div>
            </div>
            <!-- Right Section (2/3 width) -->
            <div class="col-md-8">
                <div class="right-section p-3">
                    <h5>Right Section</h5>
                    <p>This section takes up 2/3 of the width</p>
                    @Body <!-- Blazor content goes here -->
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="custom-footer py-3 mt-auto">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-md-6 col-12 d-flex flex-column align-items-md-start align-items-center text-md-start text-center">
                    <small class="fw-bold">Company Name</small>
                    <div class="d-flex align-items-center mt-2">
                        <i class="fa fa-map-pin text-orange fs-5 me-2"></i>
                        <small>123 Main Street, City, State, ZIP</small>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                        <i class="fa fa-phone text-orange fs-5 me-2"></i>
                        <small>+1 (234) 567-890</small>
                    </div>
                </div>
                <div class="col-md-6 col-12 d-flex justify-content-md-end justify-content-center text-md-end text-center mt-3 mt-md-0">
                    <span class="copyright-text">© Copyright</span>
                    <a href="https://parentcompany.com" class="footer-links mx-2">Parent Company</a> |
                    <a href="/security" class="footer-links mx-2">Security Statement</a> |
                    <a href="/privacy" class="footer-links mx-2">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="_framework/blazor.web.js"></script>

</body>
</html>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
